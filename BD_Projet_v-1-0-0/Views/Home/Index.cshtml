<body>
    
    <!--header section start -->
      <div class="header_section">
         <div class="container-fluid padding_0">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
               <a class="logo" ><img src="~/images/images2/logo.png"></a>
               <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                 <span class="navbar-toggler-icon"></span>
               </button>
               <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
                     <li class="nav-item">
                       <a class="nav-link" >Home</a>
                     </li>
                     <li class="nav-item">
                       <a class="nav-link" href="#music">Artists</a>
                     </li>
                     <li class="nav-item">
                        <a class="nav-link" href="#"><img src="~/images/images2/user-icon.png"> <span class="padding_left_10">LogOut</span></a>
                     </li>
                     
                  </ul>
               </div>
            </nav>
         </div>
      </div>
      <!-- header section end -->
      <!-- banner section start -->
      <div class="banner_section layout_padding"  class="img js-fullheight" style="background-image: url('@Url.Content("~/images/images2/banner-bg.png")');">
         <div id="main_slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
               <div class="carousel-item active">
                  <div class="container">
                     <div class="banner_taital">
                        <h1 class="banner_taital">Let’s start music</h1>
                        <p class="banner_text">There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration </p>
                     </div>
                     <h1 class="Music_text">Music</h1>
                     <form class="example" method="get" asp-action="Index" asp-controller="Home">
                       <input type="text" placeholder="Search.." name="searchTerm">
                       <button type="submit"><i class="fa fa-search"></i></button>
                     </form>
                  </div>
                  
               </div>
               
            </div>
            
         </div>
      </div>
      <!-- banner section end -->
      <!-- news section start -->
      <div class="news_section layout_padding" id="music">
         <div class="container">
            <div class="news_taital_main">
               <h1 class="latest_text">Artists Details</h1>
               @* <div class="seemor_bt"><a href="#">See More</a></div> *@
            </div>
         </div>
      </div>
      @if (searchPerformed)
        {
            <script>
                // JavaScript code to scroll to the element with ID "music"
                document.addEventListener('DOMContentLoaded', function() {
                    var musicElement = document.getElementById('music');
                    if (musicElement) {
                        musicElement.scrollIntoView({ behavior: 'smooth' });
                    }
                });
                var currentUrl = window.location.href;
                @url=currentUrl
            </script>
        }
      <div class="news_section_2">
         <div class="container">
            <div class="down_arrow"><img src="~/images/images2/down-arrow.png"></div>
            <div >
                <div class="table-responsive">
                    <div class="table-wrapper">
                        <div class="table-title">
                            <div class="row">
                                <div class="col-sm-8"><h2>Artists <b>Details</b></h2></div>
                                <div class="col-sm-4">
                                    <form method="get" asp-action="Index" asp-controller="Home">
                                        <div class="search-box">
                                            <i class="material-icons">&#xE8B6;</i>
                                            <input type="text" class="form-control" name="searchTerm" placeholder="Search&hellip;">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr>
                                    <!-- Stage Name -->
                                    <th> Stage Name </th>
                                    <th> Full Name </th>
                                    <th> Original group </i></th>
                                    <th> Company </th>
                                    <th> Gender </th>
                                    <th> Actions </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var artist in artistsOnCurrentPage)
                                {
                                    <tr>
                                        <td>@artist.Stage_Name</td>
                                        <td>@artist.Full_Name</td>
                                        <td>@artist.Original_group</td>
                                        <td>@artist.Company</td>
                                        <td>@artist.Gender</td>
                                        <td>
                                            <a href="#" class="view" title="View" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                                            @if (Model.userAuthentifie.username != "admin"){
                                                <a href="#" class="favorite" title="favorite" data-toggle="tooltip"><i class="material-icons">favorite_border</i></a>
                                            }
                                            @if (Model.userAuthentifie.username == "admin"){
                                                <a asp-controller="Artists" asp-action="Edit" asp-route-id="@artist.ID" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                                <a href="#" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                            }
                                        </td>
                                    </tr> 
                                }
                            </tbody>
                        </table>
                        <div class="clearfix">
                            <div class="hint-text">Showing <b>@artistsOnCurrentPage.Count()</b> out of <b>@Model.artists.Count()</b> entries</div>
                            <ul class="pagination">
                                @for (int i = 1; i <= (int)Math.Ceiling((double)Model.artists.Count() / pageSize); i++)
                                {
                                    
                                    <li class="page-item @(i == pageNumber ? "active" : "")">
                                        <a href="?page=@i&@url" class="page-link">@i</a>
                                         
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>  
            </div> 
         </div>

    <footer class="border-top footer text-muted position-absolute bottom-0">
        <div class="container">
            &copy; 2023 - K-Pop for All - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> 
    <script>
    function search() {
        var searchTerm = $('#searchInput').val();
        window.location.href = '?search=' + searchTerm; // Update the URL with the search parameter
    }
</script> 
</body>
